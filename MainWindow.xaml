<Window x:Class="EmotionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Emotion Analyzer" Height="350" Width="500">
    <Grid>
        <TextBlock Text="Analyseur d'Émotions" FontSize="24" HorizontalAlignment="Center" Margin="10" />

        <!-- Section d'analyse faciale -->
        <Button Content="Analyser les Émotions Faciales" 
                HorizontalAlignment="Center" VerticalAlignment="Top" 
                Margin="10,50,10,0" Click="AnalyzeFacialEmotion_Click" />

        <!-- Section d'analyse textuelle -->
        <TextBox Name="TextInputBox" Height="100" Width="400" 
                 HorizontalAlignment="Center" VerticalAlignment="Center" 
                 Margin="10" Text="Entrez le texte ici..." />
        <Button Content="Analyser les Émotions Textuelles" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                Margin="10,10,10,50" Click="AnalyzeTextEmotion_Click" />
    </Grid>
</Window>
